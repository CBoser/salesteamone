# NPM configuration for better Windows compatibility

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Increase timeout for slower connections
fetch-timeout=300000

# Use longer retry settings for Windows file locking issues
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Disable strict SSL if behind corporate proxy (comment out if not needed)
# strict-ssl=false
